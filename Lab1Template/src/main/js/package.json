{
  "name": "svelte-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "start": "sirv public --no-clear",
    "css-build": "node-sass --omit-source-map-url public/mystyles.scss public/build/global.css",
    "css-watch": "npm run css-build -- --watch",
    "start-watch": "npm run css-watch"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "bulma": "^0.9.3",
    "node-sass": "^7.0.1",
    "postcss": "^8.4.12",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.0.0",
    "svelte-preprocess": "^4.10.5"
  },
  "dependencies": {
    "sirv-cli": "^2.0.0",
    "svelma": "^0.4.5",
    "svelte-toasts": "^1.1.2"
  }
}
